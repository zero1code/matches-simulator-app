<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Simulator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarIconsColor</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="ToolbarIconsColor" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="CardView" parent="">
        <item name="backgroundTint">@color/cardBackground</item>
    </style>

    <style name="RoudedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
        <item name="color">@color/white</item>
    </style>
</resources>